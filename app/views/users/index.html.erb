<div class="container">
 <div class="row">
 <div class="col-md-3">

<div>
  <h1>User info</h1>
  <%= image_tag @user.get_profile_image(100,100) %>
  <% if @user == current_user %>
  <%= link_to edit_user_path(@user), class:'btn btn-outline-secondary' do %>
    <i class="fas fa-user-cog"></i>
  <% end %>
  <% end %>
  <p>name<%= @user.name %></p>
  <p>introduction<%= @user.introduction %></p>
</div>

 <h1>New book</h1>
　<% if @book.errors.any? %>
  <%= @book.errors.count %>error prohibited this book from being saved:
　　<ul>
   <% @book.errors.full_messages.each do |message| %>
    <li><%= message %></li>
   <% end %>
 　</ul>
 <% end %>

<%= form_with model: @book, method: :post do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
	
  <h4>Body</h4>
  <%= f.text_area :body %>
  
  <%= f.submit 'Create Book' %>
<% end %>
</div>

<div class="col-md-8 offset-md-1">
<h1>users</h1>
<table class="col-md-12">
   <thead>
   <tr>
    <th>image</th>
    <th>name</th>
    <th></th>
   </tr>
   </thead>

　<tbody>
  <% @users.each do |user| %>
  <tr>
  <td><%= image_tag @user.get_profile_image(100,100) %></td>
  <td><%= user.name %></td>
  <td><%= link_to "Show", user_path(user.id) %></td>
  <% end %>
  </tbody>
 </table>
 </div>
 </div>
 