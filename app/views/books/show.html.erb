<div>
  <%= flash[:notice] %>
</div>

  <div>User info</div> 
  <div>
  <p><%= image_tag @book.user.get_profile_image(100,100) %></p>
  <p>name<%= @book.user.name %></p>
  <p>introduction	</p>
  <p><%= link_to "プロフィール編集", edit_user_path %></p>
  <% if @book.user == current_user %>
    <%= link_to "削除", book_path(@book), method: :delete %>
  <% end %>
  </div>
 
 
<h1>New book</h1>
  <%= form_with model: @book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
	
  <h4>Body</h4>
  <%= f.text_area :body %>
  
  <%= f.submit 'Create Book' %>
  
  <% end %>
  
  <table>
   <thead>
   <tr>
    <th>Title</th>
    <th>Body</th>
   </tr>
   </thead>
  
  
   <tbody>
   <% @books.each do |book| %>
  <tr>
  <td><%= book.title %></td>
  <td><%= book.body %></td>
  <td><%= link_to "Edit", edit_book_path(book.id) %></td>
  <td><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
  </tr>
  <% end %>
  </tbody>
 </table>